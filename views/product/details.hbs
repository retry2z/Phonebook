{{>header}}
<!-- Details View -->
<header class="site-header text-center text-dark">
    <h1>Contact Details</h1>
    <h4 class="text-secondary">{{product.firstName}} {{product.lastName}}</h4>
</header>

<section class="card-body container" style="max-width: 600px;">
    <form class="form-horizontal" action="#/product/update/{{product.id}}" method="POST">
        <div class="form-group input-group">
            <div class="input-group-prepend">
                <span class="input-group-text"> <i class="fa fa-user"></i> </span>
            </div>
            <input name="firstName" class="form-control" placeholder="First name" type="text"
                value="{{product.firstName}}">
        </div> <!-- form-group// -->

        <div class="form-group input-group">
            <div class="input-group-prepend">
                <span class="input-group-text"> <i class="fa fa-user"></i> </span>
            </div>
            <input name="lastName" class="form-control" placeholder="Last name (Optional)" type="text"
                value="{{product.lastName}}">
        </div> <!-- form-group// -->

        <div class="form-group input-group">
            <div class="input-group-prepend">
                <span class="input-group-text"> <i class="fa fa-phone"></i> </span>
            </div>
            <select name="prefix" class="selectpicker" style="max-width: 120px;">
                <option value="{{product.typePrefix}}" selected>{{product.prefix}}</option>
                <optgroup label="Other countries">
                    <option value="bg">+359</option>
                    <option value="en">+44</option>
                    <option value="es">+34</option>
                </optgroup>
            </select>
            <input name="phone" class="form-control" placeholder="Phone number" type="text" value="{{product.phone}}">
        </div> <!-- form-group// -->

        <div class="form-group text-center py-4">
            <button type="submit" class="btn btn-secondary px-5">Save</button>
            <a class="btn btn-danger px-5" href="#/product/remove/{{product.id}}">Delete</a>
        </div>
    </form>
</section>
<!-- ./Details View -->
{{> footer}}