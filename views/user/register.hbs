{{> header}}
<!-- Register -->
<div style="margin: 0 auto; margin-bottom:7%; margin-top:7%;" class="modal-content col-lg-6">
    <form method="POST" action="#/user/register">
        <p class="h4 py-4">Register</p>
        <hr>
        <label class="grey-text font-weight-light">Your username</label>
        <input name="username" type="text" class="form-control">

        <label class="grey-text font-weight-light">Your password</label>
        <input name="password" type="password" class="form-control">
        <label class="grey-text font-weight-light">Your re-password</label>

        <input name="rePassword" type="password" class="form-control">
        <div class="text-center py-4 mt-3">
            <button class="btn btn-info" type="submit">Register</button>
        </div>
    </form>
</div>
