{{> header}}
<!-- Login -->
<div style="margin: 0 auto; margin-bottom:5%; margin-top:7%;" class="modal-content col-lg-6">
    <form method="POST" action="#/user/login">
        <p class="h4 py-4">Login</p>
        <hr>
        <label class="grey-text font-weight-light">Your username</label>
        <input name="username" type="text" class="form-control">

        <label class="grey-text font-weight-light">Your password</label>
        <input name="password" type="password" class="form-control">

        <div class="text-center py-4 mt-3">
            <button class="btn btn-info" type="submit">Login</button>
            <p class="py-4">or got to <a href="#/user/register">Register page</a></p>

        </div>
    </form>
</div>
